---
import { NAVIGATION } from "./const/const";
import styles from "./style.module.css";
import type { TNavigationItem } from "./types/types";

import { getLangSettings } from "../../translations/translationSettings";
const { t, localePrefix } = getLangSettings(Astro.url);
---

<header class={styles.header}>
	<div class="container">
		<nav class={styles.navMenu}>
			{
				NAVIGATION.map(({ href, text }: TNavigationItem, i) => {
					return (
						<a href={`${localePrefix}${href}`} class={styles.navLink}>
							{t[text]}
						</a>
					);
				})
			}
		</nav>
	</div>
</header>
